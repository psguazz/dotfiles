[alias]
        s = status
        undo = "!git reset --soft HEAD~1; git status"
[core]
        editor = nvim +Zon
        excludesfile = ~/.gitignore_global
[user]
        email = p.sguazz@gmail.com
        name = psguazz
        signingkey = ~/.ssh/id_rsa.pub
[filter "lfs"]
        required = true
        clean = git-lfs clean -- %f
        smudge = git-lfs smudge -- %f
        process = git-lfs filter-process
[gpg]
        format = ssh
[commit]
        gpgsign = true
[init]
        defaultBranch = main
