#!/bin/bash

source "/Users/psg/.config/scripts/palette.sh"

PLUGIN_DIR="$CONFIG_DIR/plugins"
ITEM_DIR="$CONFIG_DIR/items"

bar=(
  blur_radius=5
  color="$(hex_to_rgba $bg_dim '00')"
  corner_radius=6
  height=48
  position=top
  y_offset=10
)

default=(
  background.border_color="$(hex_to_rgba $grey)"
  background.border_width=2
  background.color="$(hex_to_rgba $bg4)"
  background.corner_radius=6
  background.drawing=on
  background.height=28
  icon.color="$(hex_to_rgba $grey)"
  icon.font="Monaco Nerd Font:Bold:16.0"
  icon.padding_left=12
  icon.padding_right=8
  label.color="$(hex_to_rgba $fg)"
  label.font="Monaco Nerd Font:Bold:12.0"
  label.padding_left=0
  label.padding_right=12
  padding_left=4
  padding_right=4
  updates=on
)

sketchybar --bar  "${bar[@]}"
sketchybar --default "${default[@]}"

source $ITEM_DIR/spaces.sh
source $ITEM_DIR/widgets.sh

